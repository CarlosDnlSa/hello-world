	Para i <- 100 hasta 0 con paso -10 Hacer	//i inica en 100 hasta 0 i disminuye en 10
		Sumar = Sumar + i						//Sumar almacena el valor de sumar + 
	FinPara
	Escribir Sumar								//Escribe el valor final de sumar
FinAlgoritmo
